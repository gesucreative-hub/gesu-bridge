{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "updater:default",
    "process:allow-restart",
    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
          { "path": "$APPCACHE/**" },
          { "path": "$APPDATA/**" },
          { "path": "$TEMP/**" }
      ]
    }
  ]
}
